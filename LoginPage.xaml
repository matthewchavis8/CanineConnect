<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="YourAppNamespace.LoginPage"
    BackgroundColor="#FFE066"> 

    <VerticalStackLayout Padding="40" Spacing="25"
                         VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="CANINE" FontSize="60" FontAttributes="Bold"
               HorizontalOptions="Center" TextColor="Black"/>
        <Label Text="CONNECT" FontSize="50" FontAttributes="Bold"
               HorizontalOptions="Center" TextColor="Black"/>

        <Entry x:Name="UsernameEntry"
               Placeholder="Username"
               BackgroundColor="White"
               TextColor="Black"
               PlaceholderColor="Gray"/>

        <Entry x:Name="PasswordEntry"
               Placeholder="Password"
               IsPassword="True"
               BackgroundColor="White"
               TextColor="Black"
               PlaceholderColor="Gray"/>

        <Button Text="Log In"
                BackgroundColor="#B7E48A"
                BorderColor="black"
                BorderWidth="2"
                TextColor="Black"
                FontAttributes="Bold"
                Clicked="OnLoginClicked" />

        <Button Text="Create Account"
                BackgroundColor="#F4A732"
                BorderColor="black"
                BorderWidth="2"
                TextColor="Black"
                FontAttributes="Bold"
                Clicked="OnCreateAccountClicked" />
    </VerticalStackLayout>
</ContentPage>
