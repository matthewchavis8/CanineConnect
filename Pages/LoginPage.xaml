<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CanineConnect.Pages.LoginPage"
    BackgroundColor="#FFE066"> 

    <VerticalStackLayout Padding="40" Spacing="25"
                         VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="CANINE" FontSize="60" FontAttributes="Bold"
               HorizontalOptions="Center" TextColor="Black"/>
        <Label Text="CONNECT" FontSize="50" FontAttributes="Bold"
               HorizontalOptions="Center" TextColor="Black"/>

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Image Source="logindog1.png"  HeightRequest="150" WidthRequest="150"/>
            <Image Source="logindog2.png"  HeightRequest="150" WidthRequest="150"/>
        </HorizontalStackLayout>

        <Button Text="Log In"
                BackgroundColor="#FFB1F36F"
                BorderColor="black"
                BorderWidth="2"
                TextColor="Black"
                FontAttributes="Bold"
                Clicked="OnLoginClicked" />
        <Button Text="Create Account"
                BackgroundColor="#F4A732"
                BorderColor="black"
                BorderWidth="2"
                TextColor="Black"
                FontAttributes="Bold"
                Clicked="OnCreateAccountClicked" />        

    </VerticalStackLayout>
</ContentPage>
