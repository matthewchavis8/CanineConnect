<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CanineConnect.Pages"
    x:Class="CanineConnect.Pages.MainTabbedPage"
    BarBackgroundColor="#FFF"
    BarTextColor="#333"
    SelectedTabColor="#0066CC"
    UnselectedTabColor="#888">

    <!-- Default/Home tab -->
    <pages:HomePage
        Title="Home"
        IconImageSource="home.png" />

    <!-- Breed matching tab -->
    <pages:BreedMatchingPage
        Title="Breed Match"
        IconImageSource="breed.png" />

    <!-- Messages tab -->
    <pages:MessagesPage
        Title="Messages"
        IconImageSource="messages.png" />

    <!-- Pups near you tab -->
    <pages:PupsNearYouPage
        Title="Pups Near You"
        IconImageSource="puppy.png" />

</TabbedPage>
